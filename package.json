{
  "name": "pi-tree-viz",
  "version": "0.1.0",
  "description": "Interactive browser visualization for pi coding agent session trees, branches, and forks",
  "keywords": [
    "branches",
    "coding-agent",
    "pi",
    "session",
    "tree",
    "visualization"
  ],
  "license": "MIT",
  "author": "",
  "bin": {
    "pi-brain": "./dist/cli.js",
    "pi-tree-viz": "./dist/cli.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts extensions/brain-query.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts src/cli.ts --format esm --dts --watch",
    "test": "vitest",
    "check": "ultracite check",
    "fix": "ultracite fix",
    "prepublishOnly": "npm run build",
    "prepare": "husky",
    "web:dev": "npm run dev --prefix src/web/app",
    "web:build": "npm run build --prefix src/web/app",
    "web:check": "npm run check --prefix src/web/app"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/websocket": "^11.2.0",
    "@sinclair/typebox": "^0.34.48",
    "better-sqlite3": "^12.6.2",
    "chokidar": "^5.0.0",
    "commander": "^13.0.0",
    "croner": "^9.1.0",
    "fastify": "^5.7.1",
    "open": "^10.1.0",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@mariozechner/pi-coding-agent": "^0.50.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/chokidar": "^1.7.5",
    "@types/node": "^22.10.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "ultracite": "^7.0.12",
    "vitest": "^2.1.8"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "npx ultracite fix"
    ]
  },
  "engines": {
    "node": ">=20"
  }
}
